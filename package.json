{
  "name": "colorizer",
  "version": "1.2.3",
  "description": "A tiny library for performing manipulations and conversions to colors",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test node_modules/.bin/nyc ava --tap | node_modules/.bin/faucet",
    "report": "node_modules/.bin/nyc report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickfatrick/colorizer.git"
  },
  "keywords": [
    "javascript",
    "color",
    "rgb",
    "hex"
  ],
  "author": "Patrick Fricano <patrick.fricano@icloud.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickfatrick/colorizer/issues"
  },
  "homepage": "https://github.com/patrickfatrick/colorizer#readme",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^6.5.2",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.11.6",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "codecov": "^1.0.1",
    "cross-env": "^2.0.0",
    "faucet": "0.0.1",
    "gulp": "^3.9.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-standard": "^7.0.1",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "nyc": "^7.1.0",
    "require-dir": "^0.3.0",
    "standard": "^7.1.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "ava": {
    "babel": "inherit"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text"
    ],
    "require": [
      "babel-register"
    ],
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
